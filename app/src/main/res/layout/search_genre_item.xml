<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/genre_card_view"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center"
	card_view:cardCornerRadius="4dp"
	>

	<RelativeLayout
		android:id="@+id/card_view_container"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/half_line_height_32dp"
		android:gravity="center_vertical">

		<ImageView
			android:id="@+id/genre_symbol"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerInParent="true"
			android:layout_marginEnd="@dimen/baseline_grid_unit_4dp"/>

		<TextView
			android:id="@+id/genre_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="@dimen/baseline_grid_unit_4dp"
			android:layout_toEndOf="@id/genre_symbol"
			android:textColor="@color/white"
			android:textSize="12sp"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/baseline_grid_unit_4dp"
			/>
	</RelativeLayout>
</android.support.v7.widget.CardView>
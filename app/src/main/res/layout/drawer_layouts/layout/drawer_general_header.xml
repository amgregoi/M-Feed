<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginStart="@dimen/baseline_margin_unit"
              android:orientation="vertical">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/fab_actions_spacing"
		android:text="@string/drawerlayout_general_heading"
		android:textColor="@color/ColorPrimary"
		android:textSize="@dimen/text_heading_18sp"
		android:textStyle="bold"/>

	<View
		android:layout_width="fill_parent"
		android:layout_height="@dimen/fab_stroke_width"
		android:layout_marginBottom="@dimen/fab_labels_margin"
		android:layout_marginTop="@dimen/fab_labels_margin"
		android:background="@color/ColorPrimary"
		/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
	android:id="@+id/swipe_container"
	layout="@layout/toolbar_filter"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginEnd="@dimen/baseline_grid_unit_4dp"
	android:layout_marginStart="@dimen/baseline_grid_unit_4dp"
	>

	<!--<RelativeLayout-->
		<!--android:layout_width="match_parent"-->
		<!--android:layout_height="match_parent">-->

		<android.support.v7.widget.RecyclerView
			android:id="@+id/manga_recycle_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/charcoal"
			android:drawSelectorOnTop="false"
			android:fadeScrollbars="false"
			android:fastScrollEnabled="true"
			android:paddingTop="5dp"
			android:stretchMode="columnWidth"
			/>

		<com.futuremind.recyclerviewfastscroll.FastScroller
			android:id="@+id/fastscroll"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:orientation="vertical"
			/>

		<ImageButton
			android:id="@+id/no_internet_image"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_signal_wifi_off_white_48dp"
		    android:layout_centerInParent="true"
		    android:background="@color/charcoal"
		    android:padding="20dp"

			/>

	<!--</RelativeLayout>-->

</android.support.v4.widget.SwipeRefreshLayout>

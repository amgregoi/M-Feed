<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
	android:id="@+id/swipe_container"
	layout="@layout/toolbar_filter"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginEnd="@dimen/baseline_grid_unit_4dp"
	android:layout_marginStart="@dimen/baseline_grid_unit_4dp"
	>

	<GridView
		android:id="@+id/recent_list_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/charcoal"
		android:clipToPadding="false"
		android:columnWidth="@dimen/grid_item_width_96dp"
		android:drawSelectorOnTop="true"
		android:fastScrollEnabled="true"
		android:horizontalSpacing="@dimen/baseline_grid_unit_4dp"
		android:numColumns="auto_fit"
		android:paddingTop="5dp"
		android:stretchMode="columnWidth"
		android:verticalSpacing="@dimen/baseline_grid_unit_4dp"
		/>
</android.support.v4.widget.SwipeRefreshLayout>

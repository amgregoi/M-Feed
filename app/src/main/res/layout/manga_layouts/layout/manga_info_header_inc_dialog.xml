<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingEnd="@dimen/single_line_height_48dp"
              android:paddingStart="@dimen/baseline_grid_unit_4dp"
	>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="Chapter: "
			android:textColor="@color/white"
			android:textSize="15sp"/>

		<EditText
			android:id="@+id/chapter_counter"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:gravity="center_vertical"
			android:inputType="number"
			android:minWidth="@dimen/single_line_height_48dp"
			android:hint="0"
			android:textColorHint="@color/white"
			android:textColor="@color/white"/>

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text=" |  "
			android:textColor="@color/white"
			android:textSize="15sp"/>

		<TextView
			android:id="@+id/chapter_max"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="100"
			android:textColor="@color/white"
			android:textSize="15sp"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="@dimen/baseline_content_unit_16dp">

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="Volume: "
			android:textColor="@color/white"
			android:textSize="15sp"/>

		<EditText
			android:id="@+id/volume_counter"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:gravity="center_vertical"
			android:inputType="number"
			android:minWidth="@dimen/single_line_height_48dp"
			android:hint="0"
			android:textColorHint="@color/white"
			android:textColor="@color/white"/>

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text=" |  "
			android:textColor="@color/white"
			android:textSize="15sp"/>

		<TextView
			android:id="@+id/volume_max"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:text="100"
			android:textColor="@color/white"
			android:textSize="15sp"/>
	</LinearLayout>

</LinearLayout>

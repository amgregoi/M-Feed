<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
	android:id="@+id/readerToolbarFooter"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="bottom"
	android:alpha=".9"
	android:background="#cc000000"
	android:elevation="2dp"
	android:visibility="visible"
	>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<ImageButton
			android:id="@+id/backPageButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="@dimen/triple_line_height"
			android:background="@drawable/ic_back"
			/>

		<ImageButton
			android:id="@+id/forwardPageButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_marginEnd="@dimen/triple_line_height"
			android:background="@drawable/ic_forward"
			/>

		<ImageButton
			android:id="@+id/skipForwardButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:background="@drawable/ic_skip_forward"
			/>

		<ImageButton
			android:id="@+id/skipPreviousButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="-10dp"
			android:background="@drawable/ic_skip_prev"
			/>

		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:background="@drawable/ic_refresh"/>

	</RelativeLayout>
</android.support.v7.widget.Toolbar>


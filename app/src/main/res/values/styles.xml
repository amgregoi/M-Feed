<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:textColorHighlight">#99ff4081</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
        <item name="android:windowBackground">@color/charcoal</item>
    </style>


    <style name="ReaderTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:textColorHighlight">#99ff4081</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
        <item name="android:windowBackground">@color/charcoal</item>
    </style>

    <!--<item name="android:windowTranslucentStatus">true</item>-->

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
	    <item name="android:icon">@drawable/filter</item>
    </style>

	<style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
		<item name="android:popupBackground">@color/ColorPrimary</item>
	</style>



	<!-- Dialog Fragment in Manga Activity -->
    <style name="MyCustomTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <item name="android:windowBackground">@color/ColorPrimary</item>
        <item name="android:colorAccent">@color/ColorAccent</item>
    </style>

	<!-- Dialog Fragment in Manga Activity -->
    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@transition/anim_in</item>
        <item name="android:windowExitAnimation">@transition/anim_out</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@color/ColorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/half_line_height_32dp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:paddingStart">@dimen/activity_vertical_margin_16dp</item>
	    <item name="android:paddingEnd">@dimen/activity_vertical_margin_16dp</item>
    </style>



</resources>

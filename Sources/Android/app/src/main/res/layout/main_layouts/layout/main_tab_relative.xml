<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    layout="@layout/toolbar_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/baseline_grid_unit_4dp"
    android:layout_marginStart="@dimen/baseline_grid_unit_4dp"
    android:background="@color/charcoal">

    <com.l4digital.fastscroll.FastScrollRecyclerView
        android:id="@+id/manga_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bubbleColor="@color/ColorAccent"
        app:bubbleTextColor="@color/white"
        app:handleColor="@color/ColorAccent"
        app:trackColor="@color/ColorAccent"
        app:hideScrollbar="true"
        app:showTrack="false"
        />

</RelativeLayout>
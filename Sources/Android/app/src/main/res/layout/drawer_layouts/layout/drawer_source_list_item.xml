<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:minHeight="@dimen/baseline_content_left_56dp"
	android:orientation="vertical"
	>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginEnd="@dimen/baseline_content_unit_16dp"
		android:layout_marginLeft="@dimen/baseline_content_left_56dp"
		android:layout_marginRight="@dimen/baseline_content_unit_16dp"
		android:layout_marginStart="@dimen/baseline_content_left_56dp"
		>

		<TextView
			android:id="@+id/sourceTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:ellipsize="middle"
			android:gravity="center_vertical"
			android:singleLine="true"
			android:textSize="15dp"
			android:textColor="@color/white"
			android:textStyle="bold"/>

		<View
			android:id="@+id/bar"
			android:layout_below="@id/sourceTitle"
			android:layout_width="fill_parent"
			android:layout_height="1dp"
		    android:background="@color/white"/>

	</RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="center_vertical"
		android:minHeight="@dimen/baseline_content_left_56dp"
		android:background="@drawable/selector_chapter_item"
		>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="@dimen/baseline_content_left_56dp"
			android:layout_marginStart="@dimen/baseline_content_left_56dp"
			android:layout_marginEnd="@dimen/baseline_content_unit_16dp"
			android:layout_marginRight="@dimen/baseline_content_unit_16dp"
			>

			<TextView
				android:id="@+id/mangaTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:ellipsize="middle"
				android:gravity="center_vertical"
				android:singleLine="true"
				android:textColor="@color/white"
				android:textSize="15dp"
				android:textStyle="bold"/>

			<TextView
				android:id="@+id/chapterDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_below="@+id/mangaTitle"
				android:gravity="center_vertical"
				android:singleLine="true"
				android:textColor="@color/grey"
				android:textStyle="italic"/>
		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>
